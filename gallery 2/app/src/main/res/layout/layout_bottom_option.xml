<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"


    android:background="?attr/colorSecondary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_bottom_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

      <!--  <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/gray_divider" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="7dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lout_send"
                android:paddingHorizontal="7dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_send"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_send_bottom"
                    app:tint="@color/black"
                     />

                <TextView
                    android:id="@+id/txt_text_send"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:text="Send" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lout_compress"
                android:paddingHorizontal="7dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_compress"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_compress_bottom"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/txt_text_compress"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="compress" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lout_extract"
                android:paddingHorizontal="7dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_extract"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_extract_bottom"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/txt_text_extract"
                    android:layout_gravity="center"
                    android:singleLine="true"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Extract" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lout_copy"
                android:paddingHorizontal="7dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_copy"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_copy_bottom"

                    />

                <TextView
                    android:id="@+id/txt_text_copy"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Copy"

                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lout_move"
                android:paddingHorizontal="7dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_move"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:rotation="45"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_move_bottom"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/txt_text_move"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Move" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lout_delete"
                android:paddingHorizontal="7dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_delete_bottom"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/txt_text_delete"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Delete" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lout_more"
                android:paddingHorizontal="7dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_more"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/more_vert"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/txt_text_more"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="More" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>




</LinearLayout>