    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/appCollections"
        android:textSize="15sp"
        android:textColor="?attr/colorOnSecondary"

        android:layout_marginTop="20dp"
        android:text="APP COLLECTIONS"
        android:layout_marginBottom="10dp"

        ></TextView>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/appViewAll"
        android:textSize="15sp"
        android:textColor="#3F51B5"
        android:layout_alignBottom="@+id/appCollections"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:text="View All"
        ></TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CollectionsNestedRecyclerView2"
        android:layout_below="@+id/appCollections"
        android:scrollbars="none"
        android:nestedScrollingEnabled="false"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/others"
        android:text="OTHERS"
        android:textColor="#505050"
        android:textSize="16sp"
        android:layout_below="@id/CollectionsNestedRecyclerView2"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@id/CollectionsNestedRecyclerView2"
        android:visibility="invisible"
        ></TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recentlyDeleted"
        android:text="  Recently deleted"
        android:textSize="16sp"
        android:layout_marginVertical="15dp"
        android:layout_below="@id/others"
        android:backgroundTint="@color/white"
        android:textAllCaps="false"
        android:textColor="#808080"
        android:visibility="invisible"
        style="?android:attr/borderlessButtonStyle"
        android:drawableLeft="@drawable/recently_added"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hiddenCollections"
        android:text="  Hidden Collection"
        android:textSize="16sp"
        android:layout_marginVertical="15dp"
        android:backgroundTint="@color/white"
        android:textAllCaps="false"
        android:textColor="#808080"
        android:visibility="invisible"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/recentlyDeleted"
        android:drawableLeft="@drawable/hidden_collection"></Button>


</RelativeLayout>