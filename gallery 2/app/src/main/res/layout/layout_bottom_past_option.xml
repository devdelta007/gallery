<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_paste_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/gray_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lout_past"
                style="@style/bottom_option_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_past"
                    style="@style/bottom_option_icon"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_past_bottom1"
                     />

                <TextView
                    android:id="@+id/txt_text_past"
                    style="@style/bottom_option_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Paste"
                    android:textColor="?attr/colorOnSecondary"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lout_past_cancel"
                style="@style/bottom_option_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_cancel"
                    style="@style/bottom_option_icon"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/close1"
                    android:padding="@dimen/_1sdp"

                    />

                <TextView
                    android:id="@+id/txt_text_cancel"
                    style="@style/bottom_option_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Cancel"
                    android:textColor="?attr/colorOnSecondary"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>